{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./*"]
        }
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
