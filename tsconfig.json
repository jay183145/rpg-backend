{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": ".", // Root directory (current directory)
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"], // Include all TypeScript files in the project
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
